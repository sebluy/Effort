<% pending = Block.pending %>
<% if !pending.empty? %>
  <div id="pending">
    <p>
      <% Block.pending.each do |block| %>
        <b><%= block.discipline.title %></b></br>
        <%= block.time_spent_string %></br>
        <%= link_to 'Finish',
          finish_discipline_block_path(block.discipline_id, block.id),
          method: :post
        %>
      <% end %>
    </p>
  </div>
<% end %>
