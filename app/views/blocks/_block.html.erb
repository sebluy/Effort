<tr>
  <td><%= block.start.to_s(:time) %></td>
  <td><%= block.start.to_date.inspect %></td>
  <td><%= block.duration %></td>
  <td>
    <%= link_to 'Destroy', discipline_block_path(@discipline, block),
            method: :delete, class: 'btn btn-sm btn-danger' %>
  </td>
  <td>
    <%= link_to 'Edit', edit_discipline_block_path(@discipline, block),
            class: 'btn btn-sm btn-warning'%>
  </td>
  <td>
    <% if block.finish.nil? %>
      <%= link_to 'Finish', finish_discipline_block_path(@discipline, block),
        method: :post, class: 'btn btn-sm btn-danger' %>
    <% end %>
  </td>
</tr>
