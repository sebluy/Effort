<div class="page-header">
  <h1>Edit <%= @discipline.title %> Block</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@discipline, @block], method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :start %>
        <%= f.datetime_select :start, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :finish %>
        <%= f.datetime_select :finish, class: 'form-control' %>
      </div>
      <%= f.submit 'Done', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
