<h1>
  <%= @discipline.title %>
</h1>

<p>
  <%= link_to 'Back to Disciplines', disciplines_path %>
</p>

<p>
  <%= link_to 'Start New Block', start_discipline_block_path(@discipline), 
    method: :post %>
</p>

<ol>
  <% @discipline.blocks.order(start: :desc).each do |block| %>

    <%= render 'blocks/show', :discipline => @discipline, :block => block %>

  <% end %>
</ol>

