<h1>Disciplines</h1>

<%= link_to 'New Discipline', new_discipline_path %>

<table>

  <thead>
    <tr>
      <th scope="col">Discipline</th>
      <th scope="col">Today</th>
      <th scope="col">Yesterday</th>
      <th scope="col">Weekly</th>
      <th scope="col">Monthly</th>
      <th scope="col">Yearly</th>
      <th scope="col">All</th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr> 
        <td scope="row">
          <%= link_to discipline.title, discipline_path(discipline) %>
        </td>
        <td> 
          <%= discipline.time_spent(:today, true) %>
        </td>
        <td> 
          <%= discipline.time_spent(:yesterday, true) %>
        </td>
        <td> 
          <%= discipline.time_spent(:week, true) %>
        </td>
        <td> 
          <%= discipline.time_spent(:month, true) %>
        </td>
        <td> 
          <%= discipline.time_spent(:year, true) %>
        </td>
        <td> 
          <%= discipline.time_spent(:all, true) %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
