<h1>Disciplines</h1>

<div>
  <%= link_to 'New Discipline', new_discipline_path %>
</div>

<div>
  <p>Old: <%= Discipline.old %></p>
  <%= link_to 'Clean', clean_path, method: :post %>
</div>

<table>

  <thead>
    <tr>
      <th>Discipline</th>
      <th>Old</th>
      <% 6.downto(2) do |days_ago| %>
        <th><%= days_ago.days.ago.strftime('%A') %></th>
      <% end %>
      <th>Yesterday</th>
      <th>Today</th>
    </tr>
  </thead>

  <tbody>

    <%= render @disciplines %>

    <tr>
      <td scope="row">
        All
      </td>
      <td>
        <%= Discipline.old %>
      </td>
      <% -6.upto(0) do |days_ago| %>
        <td>
          <%= @time_table[days_ago] %>
        </td>
      <% end %>
    </tr>

  </tbody>

</table>

<%= render json: @time_table %>

<div id="plot"></div>
