<h1>Disciplines</h1>

<%= link_to 'New Discipline', new_discipline_path %>

<table>

  <thead>
    <tr>
      <th scope="col">Discipline</th>
      <th scope="col">Today</th>
      <th scope="col">Yesterday</th>
      <th scope="col">Weekly</th>
      <th scope="col">Monthly</th>
      <th scope="col">Yearly</th>
      <th scope="col">All</th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td scope="row">
          <%= link_to discipline.title, discipline_path(discipline) %>
        </td>
        <% Discipline::RANGES.each do |range| %>
          <td>
            <%= discipline.time_spent(range) %>
          </td>
        <% end %>
      </tr>

    <% end %>

    <tr>
      <td scope="row">
        All
      </td>
      <% Discipline::RANGES.each do |range| %>
        <td>
          <%= Discipline.time_spent(range) %>
        </td>
      <% end %>
    </tr>

  </tbody>

</table>
