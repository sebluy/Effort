<h1>Disciplines</h1>

<div>
  <%= link_to 'New Discipline', new_discipline_path %>
</div>

<div>
  <p>Old: <%= Discipline.old %></p>
  <%= link_to 'Clean', clean_path, method: :post %>
</div>

<table>

  <thead>
    <tr>
      <th>Discipline</th>
      <th>Old</th>
      <% 6.downto(2) do |n| %>
        <th><%= n.days.ago.strftime('%A') %></th>
      <% end %>
      <th>Yesterday</th>
      <th>Today</th>
    </tr>
  </thead>

  <tbody>

    <%= render @disciplines %>

    <tr>
      <td scope="row">
        All
      </td>
      <td>
        <%= Discipline.old %>
      </td>
      <% -6.upto(0) do |n| %>
        <td>
          <%= @time_table[n] %>
        </td>
      <% end %>
    </tr>

  </tbody>

</table>

<%= hidden_field_tag 'plot_data', @plot_data.to_json %>

<div class="plot" id="daily_plot"></div>
<div class="plot" id="weekly_total_plot"></div>
