<h1>Disciplines</h1>

<%= link_to 'New Discipline', new_discipline_path %>

<ul>
  <% @disciplines.each do |discipline| %>

    <li> 
      <p> 
        Total Time Spent:
        <%= discipline.time_spent_all.to_i %>
        seconds
      </p>
        
      <%= link_to discipline.title, discipline_path(discipline) %>
    </li>

  <% end %>
</ul>
