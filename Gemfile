source 'https://rubygems.org'

gem 'rails'

group :development do
  gem 'guard'
  gem 'guard-minitest'
end

group :development, :test do
  gem 'pry'
  gem 'pry-rails'
  gem 'pry-byebug'
  gem 'spring'
  gem 'sqlite3'
end

group :test do
  gem 'simplecov', require: false
  gem 'mini_backtrace'
  gem 'minitest-reporters'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end

gem 'flot-rails', :git => "https://github.com/Kjarrigan/flot-rails.git"
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'
gem 'sdoc',          group: :doc
